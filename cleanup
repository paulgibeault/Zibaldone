#!/bin/bash

# Colors for output
GREEN='\033[0;32m'
BLUE='\033[0;34m'
RED='\033[0;31m'
YELLOW='\033[0;33m'
NC='\033[0m' # No Color

echo -e "${RED}=== Zibaldone Cleanup ===${NC}"
echo -e "${YELLOW}Warning: This will delete all virtual environments, dependencies, and configuration files.${NC}"

# Check for force flag
FORCE=false
if [[ "$1" == "-y" ]] || [[ "$1" == "--force" ]]; then
    FORCE=true
fi

if [ "$FORCE" = false ]; then
    read -p "Are you sure you want to proceed? (y/N) " -n 1 -r
    echo
    if [[ ! $REPLY =~ ^[Yy]$ ]]; then
        echo "Cleanup cancelled."
        exit 1
    fi
fi

# 1. Remove Backend Environment & Config
echo -e "\n${BLUE}[1/3] Cleaning Backend...${NC}"
if [ -d "backend/.venv" ]; then
    rm -rf backend/.venv
    echo -e "Removed backend/.venv"
fi
if [ -f "backend/.env" ]; then
    rm backend/.env
    echo -e "Removed backend/.env"
fi
find backend -type d -name "__pycache__" -exec rm -rf {} + 2>/dev/null
echo -e "Removed __pycache__"

# 2. Remove Frontend Dependencies
echo -e "\n${BLUE}[2/3] Cleaning Frontend...${NC}"
if [ -d "frontend/node_modules" ]; then
    rm -rf frontend/node_modules
    echo -e "Removed frontend/node_modules"
fi

# 3. Remove Global Config & Data
echo -e "\n${BLUE}[3/3] Cleaning Global Config & Data...${NC}"
if [ -f "litellm_config.yaml" ]; then
    rm litellm_config.yaml
    echo -e "Removed litellm_config.yaml"
fi
if [ -d "data" ]; then
    rm -rf data
    echo -e "Removed data/ directory"
fi
if [ -d ".pytest_cache" ]; then
    rm -rf .pytest_cache
    echo -e "Removed .pytest_cache"
fi

echo -e "\n${GREEN}=== Cleanup Complete ===${NC}"
echo "Environment is reset. Run ./setup to rebuild."
